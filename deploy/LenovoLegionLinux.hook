[Trigger]
Operation=Install
Operation=Upgrade
Operation=Remove
Type=Package
Target = linux 
Target = linux-headers
Target = linux-zen
Target = linux-zen-headers

[Action]
Description=Update LLL module in initcpio
Depends=mkinitcpio
When=PostTransaction
NeedsTargets
Exec=/bin/sh -c 'while read -r trg; do case $trg in linux) exit 0; esac; done; /usr/bin/mkinitcpio -P'